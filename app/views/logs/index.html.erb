<h2><%= l(:logs) %> </h2>

<table class="list">
  <thead>
  <th><%=h l(:field_filename) %> </th>
  <th><%=h l(:field_filesize) %></th>
  <th><%=h l(:field_updated_on) %></th>
  <th></th>
</thead>
<tbody>
  <% @logs.each do |log| -%>
    <tr class="<%= cycle('odd', 'even')%> ">
      <td>
        <%= link_to h(log), :action => 'show', :path => log.path %>
      </td>
      <td style="text-align: right">
        <%= log.size %>
      </td>
      <td style="text-align: center">
        <%= format_time(log.timestamp)  %>
      </td>
      <td>
        <%= link_to 'download', :action => 'download', :path => log.path %>
      </td>
    </tr>
  <% end -%>
</tbody>
</table>